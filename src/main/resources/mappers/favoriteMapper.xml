<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.quiz.lesson06.dao.FavoriteMapper">
 	<insert id="insertFavoriteField" parameterType="map">
 		INSERT INTO `favorite`
 		(
 			`name`
			, `url`
			, `createdAt`
			, `updatedAt`
 		)
 		VALUES
 		(
 			#{name}
 			, #{url}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	<select id="selectFavoriteList" resultType="com.quiz.lesson06.model.Favorite">
 		SELECT
 			`id`
 			, `name`
			, `url`
			, `createdAt`
			, `updatedAt`
		FROM
			`favorite`
 	</select>
 	
 	<select id="existFavoriteByUrl" parameterType="string" resultType="boolean">
 		SELECT
 			COUNT(1)
 		FROM
 			`favorite`
 		WHERE
 			`url` = #{url}
 	</select>
 </mapper>